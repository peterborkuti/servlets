<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
  version="3.0"
  metadata-complete="true">

    <description>
      MVC Servlet 01
    </description>
    <display-name>MVC Servlet 01</display-name>

    <servlet>
      <servlet-name>selectionProcessor</servlet-name>
      <servlet-class>com.example.web.ProcessSelection</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>selectionProcessor</servlet-name>
        <url-pattern>/processSelection</url-pattern>
    </servlet-mapping>

</web-app>
